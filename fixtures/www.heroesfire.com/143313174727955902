			$.getJSON( '/json/broadcast-message', function( broadcast_messages ) {
				for( var x = 0; x < broadcast_messages.length; x++ )
				{
					var haveSeenMessage = store.get('has_seen_broadcast_message-' + broadcast_messages[x].broadcast_message_id );
					if( !haveSeenMessage ){
						var messageElement = $(broadcast_messages[x].html);
						messageElement.hide();
						$('._broadcast-message-container').prepend( messageElement );
						messageElement.slideDown('fast');
					}
				}
			});
